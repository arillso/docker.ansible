{
        "$schema": "https://docs.renovatebot.com/renovate-schema.json",
        "regexManagers": [
                {
                        "fileMatch": ["^Dockerfile$"],
                        "matchStrings": [
                                "(?:RUN\\s+(?:apk update\\s+&&\\s+)?apk add --no-cache\\s+|\\\\\\s+)(?<depName>[a-zA-Z0-9-]+)(=(?<currentValue>[a-zA-Z0-9-._]+))?"
                        ],
                        "versioningTemplate": "loose",
                        "datasourceTemplate": "repology",
                        "lookupNameTemplate": "alpine_3_21/{{depName}}"
                }
        ]
}
