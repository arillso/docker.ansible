{
        "$schema": "https://docs.renovatebot.com/renovate-schema.json",
        "extends": [
                "config:best-practices",
                ":dependencyDashboard",
                ":maintainLockFilesWeekly",
                ":automergePatch",
                ":semanticCommits",
                "helpers:pinGitHubActionDigests",
                "docker:pinDigests"
        ],
        "timezone": "Europe/Zurich",
        "schedule": ["before 5am on Friday"],
        "prHourlyLimit": 3,
        "prConcurrentLimit": 8,
        "labels": ["dependencies"],
        "updatePinnedDependencies": true,
        "pruneBranchAfterAutomerge": true,
        "rangeStrategy": "pin",
        "assignees": ["sbaerlocher"],
        "reviewers": ["sbaerlocher"],
        "dependencyDashboardTitle": "ðŸ“¦ Dependency Dashboard",
        "rebaseWhen": "auto",
        "branchPrefix": "renovate/",
        "packageRules": [
                {
                        "description": "Weekly updates for pip dependencies",
                        "matchManagers": ["pip_requirements", "pip_setup"],
                        "matchUpdateTypes": ["major", "minor", "patch"],
                        "prConcurrentLimit": 10
                },
                {
                        "description": "Weekly Docker image updates",
                        "matchManagers": ["dockerfile"],
                        "matchUpdateTypes": ["major", "minor", "patch"],
                        "prConcurrentLimit": 10
                },
                {
                        "description": "Weekly GitHub Actions updates",
                        "matchManagers": ["github-actions"],
                        "matchUpdateTypes": ["major", "minor", "patch"],
                        "prConcurrentLimit": 10
                },
                {
                        "description": "Alpine packages (repology)",
                        "matchManagers": ["custom.regex"],
                        "matchDatasources": ["repology"],
                        "matchPackageNames": ["/^alpine_3_21\\\\//"],
                        "groupName": "Alpine Packages",
                        "prConcurrentLimit": 10
                },
                {
                        "description": "Non-breaking updates (patch & minor)",
                        "matchUpdateTypes": ["patch", "minor"],
                        "groupName": "Non-breaking Updates",
                        "minimumReleaseAge": "14 days",
                        "prPriority": 0,
                        "automerge": true,
                        "platformAutomerge": true
                },
                {
                        "description": "Group Docker tool updates",
                        "groupName": "Docker Tools",
                        "matchDatasources": ["docker"],
                        "matchPackageNames": [
                                "hadolint/hadolint",
                                "aquasec/trivy",
                                "ghcr.io/googlecontainertools/container-structure-test",
                                "oxsecurity/megalinter",
                                "renovate/renovate"
                        ],
                        "matchUpdateTypes": ["minor", "patch"],
                        "automerge": true
                },
                {
                        "description": "Group Alpine base images",
                        "groupName": "Alpine base images",
                        "matchDatasources": ["docker"],
                        "matchPackageNames": ["^node:.*alpine", "^busybox"],
                        "matchUpdateTypes": ["minor", "patch"],
                        "automerge": true
                },
                {
                        "description": "Major updates (breaking changes)",
                        "matchUpdateTypes": ["major"],
                        "labels": ["dependencies", "breaking"],
                        "minimumReleaseAge": "14 days",
                        "automerge": false,
                        "dependencyDashboardApproval": true
                }
        ],
        "customManagers": [
                {
                        "description": "Alpine packages in Dockerfile",
                        "customType": "regex",
                        "fileMatch": ["^Dockerfile$"],
                        "matchStrings": [
                                "(?:RUN\\s+(?:apk update\\s+&&\\s+)?apk add --no-cache\\s+|\\\\\\s+)(?<depName>[a-z][a-z0-9-]*)(=(?<currentValue>[a-zA-Z0-9-._]+))?"
                        ],
                        "versioningTemplate": "loose",
                        "datasourceTemplate": "repology",
                        "packageNameTemplate": "alpine_3_21/{{depName}}"
                },
                {
                        "description": "Docker images in Makefiles and Docker Compose files",
                        "customType": "regex",
                        "fileMatch": [
                                "(^|/)Makefile$",
                                "(^|/)docker-compose.*\\.ya?ml$"
                        ],
                        "matchStrings": [
                                "(?:docker (?:run|compose|build)[^\\n]*?\\s|image:\\s*[\"]?)(?<depName>[^:\\s\"]+):(?<currentValue>[^\\s\\\\/\"@]+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?[\"]?"
                        ],
                        "datasourceTemplate": "docker",
                        "versioningTemplate": "docker"
                }
        ],
        "ignoreDeps": [],
        "vulnerabilityAlerts": {
                "enabled": true,
                "labels": ["security"],
                "assignees": ["sbaerlocher"]
        },
        "osvVulnerabilityAlerts": true,
        "lockFileMaintenance": {
                "enabled": true,
                "schedule": ["before 6am on Monday"]
        }
}
